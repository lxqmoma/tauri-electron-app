    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.11",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.0"
